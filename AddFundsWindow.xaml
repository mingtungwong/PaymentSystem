<Window x:Class="PaymentSystem.AddFundsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaymentSystem"
        mc:Ignorable="d"
        Title="AddFundsWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="FundsAmountInput" HorizontalAlignment="Left" Height="23" Margin="340,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Label x:Name="FundsAmountLabel" Content="Amount" HorizontalAlignment="Left" Margin="286,97,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="365,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="AddFundsAccountInfo" HorizontalAlignment="Left" Margin="340,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="112"/>
        <Button x:Name="SubmitFunds" Content="Submit" HorizontalAlignment="Left" Margin="354,160,0,0" VerticalAlignment="Top" Width="75" Click="SubmitFunds_Click"/>

    </Grid>
</Window>
