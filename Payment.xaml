<Window x:Class="PaymentSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaymentSystem"
        mc:Ignorable="d"
        Title="Payment System" Height="450" Width="800">
    <Grid>
        <Button x:Name="AddPaymentButton" Content="Add Payment Option" HorizontalAlignment="Left" Margin="57,62,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click" FontSize="8"/>
        <ComboBox x:Name="SavedPaymentsDropdown" SelectionChanged="ComboBox_SelectionChanged" Margin="57,97,635,300" SelectedIndex="0" VerticalAlignment="Center"/>
        <Button x:Name="DeletePaymentOption" Content="Delete" HorizontalAlignment="Left" Margin="269,99,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button x:Name="EditPaymentOption" Content="Edit" HorizontalAlignment="Left" Margin="178,99,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock x:Name="PaymentInfo" HorizontalAlignment="Left" Margin="57,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="188" Width="287"/>
    </Grid>
</Window>
